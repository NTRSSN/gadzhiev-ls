.userinfo {
    display: flex;
    justify-content: center;

    @include tablets {
        flex-direction: column;
        align-items: center;
    }

    @include phones {
        padding-top: 25%;
    }
}

.userinfo__title {    
    margin: 10px 35px 0 0;
    font-weight: 600;
    font-size: 18px;
    text-align: end;
    opacity: 0.5;

    @include tablets {
        margin: 0 0 40px;
        text-align: center;
        line-height: 1.8;
    }

    @include phones {
        margin: 0 0 14px;
        line-height: 1.4;
    }
}

.userinfo__name {
    font-weight: 800;
    font-size: 72px;
    flex-basis: 430px;
    line-height: .85;

    @include tablets {
        font-size: 48px;
        text-align: center;
        line-height: 0.9;
    }

    @include phones {
        line-height: 1.2;
    }
}