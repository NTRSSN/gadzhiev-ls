.iconed-link {
  text-decoration: none;
  display: inline-flex;
  align-items: center;
  color: $links-color;
  font-size: 18px;
  font-weight: bold;

  &:hover {
    text-decoration: underline;
  }

  &:before {
    content: "";
    display: block;
    width: 20px;
    height: 20px;
    background: svg-load('link.svg', fill=$links-color) center center no-repeat;
    margin-right: 20px;
  }
}